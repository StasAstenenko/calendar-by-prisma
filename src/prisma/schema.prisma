datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  events    Event[]
  createdAt DateTime @default(now())
}

model Event {
  id         String     @id @default(cuid())
  title      String
  description String?
  start      DateTime
  end        DateTime
  importance Importance
  userId     String
  user       User       @relation(fields: [userId], references: [id])
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

enum Importance {
  LOW
  MEDIUM
  CRITICAL
}
